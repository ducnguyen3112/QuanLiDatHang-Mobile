<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".VerificationOTPActivity"
    android:gravity="bottom"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/ivbackVerifyOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="50dp"
        />
    <ImageView
        android:layout_gravity="center"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/verification_badge_icon"/>
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập mã xác nhận"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#EEEEEE"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/etNhapMaOTP"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="123456"
        android:background="@drawable/rounded_corners"
        android:inputType="phone"
        android:padding="5dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="40sp"
        style="@style/btnLogin"/>
    <LinearLayout
        android:id="@+id/llresendOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <TextView
            style="@style/resendOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Không nhận được mã OTP?"
            android:textColor="#EEEEEE"/>
        <TextView
            style="@style/resendOTP"
            android:id="@+id/tvGuiLaiOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:textColor="@color/teal_200"
            android:text="Gửi lại"/>
    </LinearLayout>
    <Button
        android:text="SIGN IN"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="180dp"
        android:id="@+id/btnLoginOTP"
        style="@style/btnLogin"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:textSize="30sp"/>
</LinearLayout>