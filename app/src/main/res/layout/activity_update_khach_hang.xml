<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity.KhachHang.UpdateKhachHangActivity">

    <TextView
        android:id="@+id/tvUpdateId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:hint="Mã khách hàng"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtUpdateNameKH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Tên khách hàng"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtUpdateAddressKH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Địa chỉ"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtUpdatePhoneKH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Số điện thoai"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_margin="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnUpdateKH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Cập nhật"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btnCancelUpdateKH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Hủy"
            android:textSize="20sp" />

    </LinearLayout>


</LinearLayout>