<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="bottom"
    android:theme="@style/Theme.Design.NoActionBar"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="welcome back!"
        android:fontFamily="@font/goldman"
        android:textSize="38sp"
        android:theme="@style/fontGoldman"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etUser"
        style="@style/editTextLogin"
        android:layout_marginTop="50dp"
        android:hint="Enter your username"
        android:inputType="textPersonName" />

    <EditText
        style="@style/editTextLogin"
        android:textSize="22sp"
        android:id="@+id/etPasswd"
        android:inputType="textPassword"
        android:hint="Enter your password"/>

    <LinearLayout
        android:id="@+id/llresendOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <TextView
            style="@style/resendOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập bằng mã OTP "/>
        <TextView
            style="@style/resendOTP"
            android:id="@+id/tvLoginBangOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:textColor="#D5E34E"
            android:text="Tại đây"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnLogin"
        style="@style/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="SIGN IN"
        android:textSize="20sp" />

</LinearLayout>