<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/rounded_corners_dialog">

    <TextView
        android:padding="10dp"
        android:id="@+id/tvTieuDeDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="THÊM ĐƠN HÀNG"
        android:textSize="30sp"
        android:background="@drawable/rounded_corners_dialog_title"
        android:textColor="@color/white"
        android:textStyle="bold"
        />
    <TextView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvIdDonHangDialog"
        android:text="1"
        android:textSize="30sp"
        android:gravity="center"
        android:textStyle="bold"
        android:visibility="invisible"/>
    <TextView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Khách hàng:"
        />

    <Spinner
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:id="@+id/spKH"
        android:popupBackground="@color/dropdownBackColor"
        android:background="@drawable/bg_spinner"

        />

    <TextView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:text="Ngày đặt đơn hàng:" />

    <EditText
        android:layout_margin="5dp"
        android:id="@+id/etNgayDH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:inputType="datetime"
        android:importantForAutofill="yes"
        android:background="@drawable/custom_edit_text"
        android:padding="10dp"
        android:autofillHints="" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"/>


    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnthem"
            style="@style/DialogButton"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:background="@drawable/rounded_corners_button_solid"
            android:text="Thêm"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnhuy"
            style="@style/DialogButton"
            android:background="@drawable/rounded_corners_button_border"
            android:text="Hủy"
            android:textColor="@color/dialogBackColor"
            android:layout_toEndOf="@id/btnthem"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="parent" />


    </RelativeLayout>


</LinearLayout>