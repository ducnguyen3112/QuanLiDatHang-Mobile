<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TTDDH_Activity"
    >

    <LinearLayout
        android:id="@+id/llThongTin_ttddh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/heading3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã đơn hàng"
                />

            <TextView
                android:id="@+id/tvMaDH_ttddh"
                style="@style/data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                />

            <TextView
                style="@style/heading3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày đặt hàng"
                />

            <TextView
                android:id="@+id/tvNgayDH_ttddh"
                style="@style/data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19/04/2022 12:12"
                />
        </LinearLayout>

        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="@color/black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/heading3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên khách hàng"
                />

            <TextView
                android:id="@+id/tvTenKH_ttddh"
                style="@style/data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tom Hidlleson"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/heading3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SĐT"
                />

            <TextView
                android:id="@+id/tvSDT_ttddh"
                style="@style/data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0369369369"
                />

            <TextView
                style="@style/heading3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ"
                />

            <TextView
                android:id="@+id/tvDiaChi_ttddh"
                style="@style/data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="90 Man Thiện"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            >


            <TextView
                style="@style/heading3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng giá trị đơn hàng"
                />

            <TextView
                android:id="@+id/tvTongTien_ttddh"
                style="@style/data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.000"
                />
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_ttddh"
        android:layout_width="410dp"
        android:layout_height="411dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llThongTin_ttddh"
        />

    <Button
        android:id="@+id/btnThemSP_ttddh"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect_raised"
        android:padding="10dp"
        android:layout_marginStart="30dp"
        android:text="@string/themsanpham"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rcv_ttddh"
        />

    <Button
        android:id="@+id/btnCapNhat_ttddh"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect_outline"
        android:padding="10dp"
        android:layout_marginEnd="30dp"
        android:text="@string/capnhat"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rcv_ttddh"
        />
</androidx.constraintlayout.widget.ConstraintLayout>