<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp"
    >

    <LinearLayout
        android:id="@+id/llItemTTDDH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/ivAnhSP_itemTTDDH"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="0"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/ic_box_svgrepo_com"
            />

        <LinearLayout
            android:id="@+id/llThongTin_itemTTDDH"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_toEndOf="@+id/ivAnhSP_itemTTDDH"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_margin="5dp"
            android:paddingStart="5dp"
            >

            <TextView
                android:id="@+id/tvTenSP_itemTTDDH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IPhone 13 Pro MAX"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/purple_500"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lượng"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/tvSL_itemTTDDH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="9"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đơn giá"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/tvDonGia_itemTTDDH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="5000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPhimChucNang_itemTTDDH"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_toEndOf="@id/llThongTin_itemTTDDH"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@+id/ibSuaSL_itemTTDDH"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="#B9FFEB3B"
                app:srcCompat="@drawable/ic_baseline_edit_24"
                app:tint="#015C54"
                />

            <ImageButton
                android:id="@+id/ibXoaSP_itemTTDDH"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="#B900BCD4"
                app:srcCompat="@drawable/ic_baseline_delete_24"
                app:tint="#E91E63" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>