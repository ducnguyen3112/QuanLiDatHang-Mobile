<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:gravity="center"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/themsanpham"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#148F77"
        android:padding="20dp"
        android:gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Sản phẩm"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginVertical="10dp"
        />

    <Spinner
        android:id="@+id/spinnerSP_dialogThemSP"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        tools:ignore="SpeakableTextPresentCheck"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Số lượng"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginVertical="10dp"
        />

    <EditText
        android:id="@+id/etSL_dialogThemSP"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="number"
        android:textSize="20sp"
        tools:ignore="SpeakableTextPresentCheck"
        android:autofillHints="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="10dp"
        >

        <Button
            android:id="@+id/btnHuy_dialodThemSP"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="#E3E047"
            android:text="Hủy" />

        <Button
            android:id="@+id/btnThem_dialodThemSP"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="#76CC41"
            android:text="Thêm" />
    </LinearLayout>
</LinearLayout>